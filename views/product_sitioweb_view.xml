<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="website_sale_products_inherit" inherit_id="website_sale.shop_product_image">
        <xpath expr="//div[contains(@class, 'd-inline-flex')]" position="inside">
            <div class="oe_product_info mt-3">
                <p class="d-block text-muted" style="font-size: 12px;">
                    <strong>
                        <t t-esc="product.empaquetado_descripcion" />
                    </strong>
                </p>
                <p class="d-block font-weight-bold" style="font-size: 14px;"> $<t
                        t-esc="product.precio_unitario" /> / un </p>
            </div>
        </xpath>
    </template>
</odoo>