<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="website_sale_products_inherit" inherit_id="website_sale.shop_product_image">
        <xpath expr="//div[contains(@class, 'd-inline-flex')]" position="inside">
            <div class="oe_product_info mt-3">
                <p>
                    <strong>Cantidad por caja:</strong>
                    <t t-esc="product.cantidad_por_caja or 'N/A'" />
                </p>
                <p><strong>Precio por unidad:</strong>
                    <t t-esc="product.precio_por_unidad or 'N/A'" />
                    $ </p>
            </div>
        </xpath>
    </template>
</odoo>